_root	:=	_rotate(sprite,degrees)
	|	_rotateTime(sprite,degrees,time)
	|	_move(sprite,steps)
	|	_moveTime(sprite,steps,time)
	|	_statement()
	|	_coordinates()
	|	_glide(sprite,time,x,y)
	|	_noise(sprite)
	|	_random(x,y)
	|	_broadcast(statement)

_rotate(sprite,degrees)	:=	ROTATE(_sprite,_degrees)

_rotateTime(sprite,degrees,time)	:=	ROTATETIME(_sprite,_degrees,_time)

_move(sprite,steps)	:=	MOVE(_sprite,_steps)

_moveTime(sprite,steps,time)	:=	MOVETIME(_sprite,_steps,_time)

_statement()	:=	IF(_condition,_statement)
			|	IFELSE(_condition,_statement,_eStatement)
			|	WHILE(_booleanStatement,_statement)

_coordinates()	:=	LOCATION(_sprite)

_glide(sprite,time,x,y)	:=	GLIDE(_sprite,_time,_x,_y)

_noise(sprite)	:=	NOISE(_sprite)

_random(x,y)	:=	RANDOM(_x,_y)

_broadcast(statement)	:=	broadcast(_statement)

